--- 
layout: base.njk 
---

<div class="portfolio">
    <nav class="portfolio__nav port-nav">
        <h3 class="port-nav__heading u-padding-top">My work</h3>
        <ul class="port-nav__links">
            {%- for portfolio in collections.portfolioReversed -%}
                <li class="port-nav__item">
                    <a href="{{portfolio.url}}" class="port-nav__link">{{portfolio.data.title}}</a>
                </li>
            {%- endfor -%}
        </ul>
    </nav>

    <article class="portfolio__article article">
        <img src="{{thumb}}" alt="{{title}}" class="article__image">
        <h2 class="article__title">{{title}}</h2>
        <p class="article__info"></p>
        <div class="article__wrapper">
            {{ content | safe }}
        </div>
    </article>
</div>